//simple direct messaging system

//sending message

generate HTML

user enters message

post message as json '{'sender': userid1, 'receiver': userid2, 'message':'hello'}'

//backend receives message

receive json via file_get_contents('php://input');

decode string via json_decode()

insert into database

post message to receiver as json

//receiving message

receive json via file_get_contents('php://input');

decode string via json_decode()

generate HTML
